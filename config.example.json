{
  "general": {
    "debug": false
  },
  "database": {
    "path": "%PROGRAMDATA%\\RebootReminder\\reboot_reminder.db"
  },
  "logging": {
    "level": "info",
    "path": "%PROGRAMDATA%\\RebootReminder\\logs\\reboot_reminder.log",
    "maxSize": 10485760,
    "maxFiles": 5
  },
  "reboot": {
    "checkIntervalSeconds": 300,
    "maxPendingRebootAgeHours": 72,
    "checkWindowsUpdates": true,
    "checkPendingFileRenames": true,
    "checkComponentBasedServicing": true,
    "checkSccmClient": true,
    "checkDomainController": false,
    "timeframes": [
      {
        "minHours": 24,
        "maxHours": 48,
        "reminderInterval": "4h",
        "deferrals": ["1h", "4h", "8h", "24h"]
      },
      {
        "minHours": 49,
        "maxHours": 72,
        "reminderInterval": "2h",
        "deferrals": ["1h", "2h", "4h"]
      },
      {
        "minHours": 73,
        "reminderInterval": "30m",
        "deferrals": ["30m", "1h"]
      }
    ]
  },
  "notification": {
    "showToast": true,
    "showTray": true,
    "showBalloon": false
  },
  "branding": {
    "title": "Reboot Reminder",
    "iconPath": "%PROGRAMFILES%\\RebootReminder\\icon.ico"
  },
  "service": {
    "runAsService": true,
    "name": "RebootReminder",
    "displayName": "Reboot Reminder Service",
    "description": "Provides notifications when system reboots are necessary"
  },
  "watchdog": {
    "enabled": true,
    "checkIntervalSeconds": 300,
    "maxDowntimeSeconds": 600
  }
}
